@model ToDoMVC.Models.Folder

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Agregar carpeta</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group col">
                    <div class="col-2">
                        <label asp-for="FolderName"></label>
                    </div>
                </div>
                <div class="form-group col">
                    <div class="col-8">
                        <input asp-for="FolderName" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="create" />"
                        </div>
                        <div class="col">
                            <a class="btn btn-danger w-75" asp-action="Index">Vover a Carpetas</a> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



</form>

