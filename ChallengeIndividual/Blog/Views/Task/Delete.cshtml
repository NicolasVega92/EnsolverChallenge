@model ToDoMVC.Models.Task

<form method="post" asp-action="DeleteTask">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Borrar Tarea</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col order-0">
                        <label asp-for="Content"></label>
                    </div>
                    <div class="col order-1">
                        <input asp-for="Content" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col order-0">
                        <label asp-for="FolderId"></label>
                    </div>
                    <div class="col order-1">
                        <input asp-for="FolderId" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />"
                        </div>
                        <div class="col">
                            <a class="btn btn-success w-75" asp-action="Index">Vover a Tareas</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


